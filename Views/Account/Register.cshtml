@model WebTuyenSinh.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/Register.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="register-wrapper">
    <div class="register-card">

        <!-- Nút đóng (quay lại Login) -->
        <a asp-controller="Account" asp-action="Login" class="close-btn" title="Quay lại đăng nhập">×</a>

        <!-- Tiêu đề trong khung -->
        <h3 class="card-title text-center mb-3">Đăng ký tài khoản</h3>

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <input asp-for="CCCD" class="form-control" placeholder="CCCD (12 số)" />
            <span asp-validation-for="CCCD" class="text-danger small"></span>

            <input asp-for="HoDem" class="form-control" placeholder="Họ và tên đệm" />
            <span asp-validation-for="HoDem" class="text-danger small"></span>

            <input asp-for="Ten" class="form-control" placeholder="Tên" />
            <span asp-validation-for="Ten" class="text-danger small"></span>

            <input asp-for="NgaySinh" type="date" class="form-control" />
            <span asp-validation-for="NgaySinh" class="text-danger small"></span>

            <select asp-for="GioiTinh" class="form-select">
                <option value="">-- Chọn giới tính --</option>
                <option>Nam</option>
                <option>Nữ</option>
            </select>
            <span asp-validation-for="GioiTinh" class="text-danger small"></span>

            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger small"></span>

            <input asp-for="SoDienThoai" class="form-control" placeholder="Số điện thoại" />
            <span asp-validation-for="SoDienThoai" class="text-danger small"></span>

            <!-- Địa chỉ -->
            <select id="city" asp-for="ProvinceId" class="form-select"></select>
            <select id="district" asp-for="DistrictId" class="form-select"></select>
            <select id="ward" asp-for="WardId" class="form-select"></select>

            <input id="tenTinh" asp-for="ProvinceName" hidden />
            <input id="tenQuan" asp-for="DistrictName" hidden />
            <input id="tenPhuong" asp-for="WardName" hidden />

            <input asp-for="SoNha" class="form-control" placeholder="Số nhà, đường…" />
            <span asp-validation-for="SoNha" class="text-danger small"></span>

            <!-- Mật khẩu -->
            <div class="input-group">
                <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Mật khẩu">
                <span class="input-group-text toggle-password" data-target="#Password"><i class="bi bi-eye-slash"></i></span>
            </div>
            <span asp-validation-for="Password" class="text-danger small"></span>

            <!-- Nhập lại mật khẩu -->
            <div class="input-group">
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="Nhập lại mật khẩu">
                <span class="input-group-text toggle-password" data-target="#ConfirmPassword"><i class="bi bi-eye-slash"></i></span>
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>

            <button class="btn btn-primary w-100 mt-3">Đăng ký</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
    <script src="~/js/Register.js"></script>
}
