@model WebTuyenSinh.ViewModels.LoginVM
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_Layout";
}

<div class="login-container">
    <div class="login-wrapper">
        <h3 class="text-center">Đăng Nhập</h3>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success" id="successMessage">@TempData["Success"]</div>
        }

        <form asp-controller="Account" asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="CCCD"></label>
                <input asp-for="CCCD" class="form-control" />
                <span asp-validation-for="CCCD" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password"></label>
                <div class="input-group">
                    <input asp-for="Password" type="password" class="form-control" id="password-input" />
                    <button type="button" class="toggle-password" data-target="#password-input" tabindex="-1">
                        <i class="bi bi-eye-slash"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <button class="btn-submit">ĐĂNG NHẬP</button>

            <div class="links">
                <a asp-controller="Account" asp-action="ForgotPassword">Quên mật khẩu?</a>
                <a asp-controller="Account" asp-action="Register">Đăng ký</a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/js/login.js" defer></script>
    <partial name="_ValidationScriptsPartial" />
}
