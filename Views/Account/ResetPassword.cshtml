@model WebTuyenSinh.ViewModels.ResetPasswordVM
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "_Layout";
}

<div class="reset-container">
    <div class="reset-wrapper">
        <h3>Đặt lại mật khẩu</h3>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <form asp-action="ResetPassword"
              asp-controller="Account"
              method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CCCD" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="NewPassword"></label>
                <div class="input-group">
                    <input asp-for="NewPassword" type="password" class="form-control" id="new-pwd" />
                    <button type="button" class="btn-eye toggle-password" data-target="#new-pwd">
                        <i class="bi bi-eye-slash"></i>
                    </button>
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword"></label>
                <div class="input-group">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirm-pwd" />
                    <button type="button" class="btn-eye toggle-password" data-target="#confirm-pwd">
                        <i class="bi bi-eye-slash"></i>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button class="btn-save">Lưu mật khẩu</button>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/resetpassword.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
}

@section Scripts {
    <script src="~/js/resetpassword.js" defer></script>
    <partial name="_ValidationScriptsPartial" />
}
