@using System.Security.Claims
@{
    var hoTen = User.FindFirst("HoTen")?.Value ?? "Admin";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"] - Quản trị hệ thống</title>

    <!-- CSS -->
    <link href="~/css/admin.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
</head>
<body class="admin-layout">
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar bg-dark text-white" style="width: 240px; min-height: 100vh;">
            <div class="p-3 border-bottom">
                <span class="fw-bold fs-5 text-white d-flex align-items-center">
                    <i class="fas fa-user-circle fa-lg me-2"></i> @hoTen
                </span>

            </div>
            <ul class="nav flex-column px-2">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="AdminHome" asp-action="Index">
                        <i class="fas fa-home me-2"></i>Trang chủ
                    </a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white" href="#" id="khachHangDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-users me-2"></i>Quản lý khách hàng
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="khachHangDropdown">
                        <li>
                            <a class="nav-link text-white" asp-area="" asp-controller="AdminKhachHang" asp-action="Index">
                                <i class="fas fa-home me-2"></i>Dach sánh quản trị viên
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-controller="DanhSachTuVan" asp-action="Index">
                                <i class="fas fa-user-graduate me-2"></i>Danh sách Tư Vấn online
                            </a>

                        </li>
                        <li>
                            <a class="dropdown-item" asp-controller="TaiKhoanTuyenSinh" asp-action="Index">
                                <i class="fas fa-user-graduate me-2"></i>Danh sách Tuyển sinh online
                            </a>
                        </li>
                    </ul>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="LichHen" asp-action="Index">
                        <i class="fas fa-calendar me-2"></i>Lịch hẹn
                    </a>
                </li>

                <li class="nav-item mt-4">
                    <a class="nav-link text-danger" asp-controller="Admin" asp-action="DangXuat">
                        <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main content -->
        <main class="flex-fill bg-light p-4" style="margin-left: 240px;">
            <div class="mb-4">
                <h5 class="text-muted">Xin chào, @hoTen</h5>
            </div>
            @RenderBody()
        </main>
    </div>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
