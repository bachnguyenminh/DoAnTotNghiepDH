@model WebTuyenSinh.ViewModels.TuVanTuyenSinhVM

<form asp-action="ThemMoi" method="post" id="form-them-moi">
    <div class="modal-body">
        <div class="mb-3">
            <label asp-for="HoVaTen" class="form-label"></label>
            <input asp-for="HoVaTen" class="form-control" />
            <span asp-validation-for="HoVaTen" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NamSinh" class="form-label"></label>
            <input asp-for="NamSinh" type="date" class="form-control" />
            <span asp-validation-for="NamSinh" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SoDienThoai" class="form-label"></label>
            <input asp-for="SoDienThoai" class="form-control" />
            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DiaChi" class="form-label"></label>
            <input asp-for="DiaChi" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Gmail" class="form-label"></label>
            <input asp-for="Gmail" class="form-control" />
            <span asp-validation-for="Gmail" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TrinhDoHocVan" class="form-label"></label>
            <input asp-for="TrinhDoHocVan" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="DangHocTruong" class="form-label"></label>
            <input asp-for="DangHocTruong" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="NganhHocQuanTam" class="form-label"></label>
            <select asp-for="NganhHocQuanTam" asp-items="Model.DanhSachNganhNghe" class="form-select"></select>
        </div>

        <div class="mb-3">
            <label asp-for="HoTenPhuHuynh" class="form-label"></label>
            <input asp-for="HoTenPhuHuynh" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="SoDienThoaiPhuHuynh" class="form-label"></label>
            <input asp-for="SoDienThoaiPhuHuynh" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="NguoiPhuTrach" class="form-label"></label>
            <select asp-for="NguoiPhuTrach" asp-items="Model.DanhSachQuanTriVien" class="form-select"></select>
        </div>

        <div class="mb-3">
            <label asp-for="TrangThai" class="form-label"></label>
            <input asp-for="TrangThai" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="GhiChu" class="form-label"></label>
            <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">💾 Lưu</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">❌ Đóng</button>
    </div>
</form>
